
.banner {
	  background: linear-gradient(135deg, #5ba8d4 0%, #7dc5eb 100%);
	  padding: 40px 20px;
	  color: white;
	  text-align: center;
	  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}
.app-name {
	  font-size: 28px;
	  font-weight: bold;
	  margin-bottom: 8px;
	  letter-spacing: 0.5px;
}
.slogan {
	  font-size: 14px;
	  opacity: 0.9;
	  margin-top: 5px;
	  font-weight: 300;
}
.content { 
	  padding: 15px;
}
.section-title { 
	  font-size: 18px; 
	  font-weight: bold; 
	  margin-bottom: 15px; 
	  margin-top: 10px;
}
.notice-content { 
	  padding: 15px; 
	  font-size: 14px; 
	  color: #666; 
	  line-height: 1.6;
}
.image-section {
	  margin-top: 20px;
	  padding: 0;
	  width: 100%;
}
.content-image {
	  width: 100%;
	  display: block;
}
